var child = require('child_process');
    nake = require('nake');

nake.task('build', function() {
  console.log("Browserifying...");
  child.exec('./node_modules/.bin/browserify -o CM1.js');
});

nake.task('test', function() {
  console.log("Testing");
  child.exec('./node_modules/.bin/vows test/*-test.js');
});

nake.Default = 'test';
